pipeline {
    agent any
    stages {
       stage('CLone git') { 
            steps { sh 'mkdir repo1'
                    sh 'cd repo1'
                    dir ('repo1') {
                    git([url : 'https://github.com/20022717-Muhammad-Irfan/test.git', branch: 'main'])
                    }
                }
                }
        stage('Build') {
            steps { sh 'cd repo1'
                    sh 'docker build -t myimage .'
                    sh 'docker run myimage'
                    echo 'This stage will execute the docker image and its container.'
            }
        }
        stage('Test') {
            
            parallel {
                stage('Integration Test') {
                  
                   steps {
                        echo 'Testing the integration btwn Docker, GitHub and Jenkins'
                    }
                }
                stage('End-to-End Test') {
                    
                    steps {
                        echo 'User testing the web application'
                    }
                }
                stage('Web App Test') {
                    
                    steps {
                       echo 'Testing the features are working'
                    }
                }
            }
        }
        stage ('Deploy') {
         steps {
           echo 'Deployment stage executed'
           }
           }
    }
}
