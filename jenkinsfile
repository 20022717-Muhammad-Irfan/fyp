pipeline {
    agent { dockerfile true}
    stages {
       stage('Clone git') { 
            steps { sh 'rm -r fyp'
                    sh 'mkdir fyp'
                    sh 'cd fyp'
                    dir ('fyp') {
                    git url : 'https://github.com/20022717-Muhammad-Irfan/fyp.git', branch: 'main'
                    }
                }
                }
        stage('Build and Deploy') {
            steps {
               git 'https://github.com/20022717-Muhammad-Irfan/fyp/blob/98d2038fd7f5647f27971c0201b9bfa01e11ac2f/Dockerfile'
               
               myImg = docker.build 'my-image'
            }
        }
        stage('Test') {
            
            parallel {
            
                stage('Docker Container Test') {
                  
                   steps {
                       echo 'build container'
                    }
                }
                stage('End-to-End Test') {
                    
                    steps {
                        echo 'User testing the web application'
                    }
                }
                stage('Web App Test') {
                    
                    steps {
                       echo 'Testing the features are working'
                    }
                }
            }
        }
        
    }
}
