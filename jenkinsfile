pipeline {
    agent { dockerfile true}
    stages {
       stage('Clone git') { 
            steps { sh 'mkdir fyp'
                    sh 'cd fyp'
                    dir ('fyp') {
                    git url : 'https://github.com/20022717-Muhammad-Irfan/fyp.git', branch: 'main'
                    }
                }
                }
        stage('Build and Deploy') {
            steps { sh 'cd fyp'
                    sh 'docker build -t website .'
                    sh 'docker run -it -p 8080:80 --name web website'
                    echo 'This stage will execute the docker image and its container.'
            }
        }
        stage('Test') {
            
            parallel {
            
                stage('Docker Container Test') {
                  
                   steps {
                       echo 'build container'
                    }
                }
                stage('End-to-End Test') {
                    
                    steps {
                        echo 'User testing the web application'
                    }
                }
                stage('Web App Test') {
                    
                    steps {
                       echo 'Testing the features are working'
                    }
                }
            }
        }
        
    }
}
