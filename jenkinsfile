pipeline {
    agent any
    stages {
       stage('Clone git') { 
            steps { sh 'rm -r fyp'
                    sh 'mkdir fyp'
                    sh 'cd fyp'
                    dir ('fyp') {
                    git url : 'https://github.com/20022717-Muhammad-Irfan/fyp.git', branch: 'main'
                    }
                }
                }
        stage('Build and Deploy') {
            steps {
               sh 'echo "docker(0" | sudo -S docker build -t myimage .'
               sh 'echo "docker(0" | sudo -S docker run -d -it -p 80:80 --name FYP myimage /bin/bash/'
            }
        }
        stage('Test') {
            
            parallel {
            
                stage('Docker Container Test') {
                  
                   steps {
                       echo 'build container'
                    }
                }
                stage('End-to-End Test') {
                    
                    steps {
                        echo 'User testing the web application'
                    }
                }
                stage('Web App Test') {
                    
                    steps {
                       echo 'Testing the features are working'
                    }
                }
            }
        }
        
    }
}
